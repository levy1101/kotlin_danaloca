<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20FFA640" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Right Shadow -->
    <item android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#15FFA640" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Background -->
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#D7C4EEFF" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
