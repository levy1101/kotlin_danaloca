<resources>
    <!-- Base application theme -->
    <style name="Theme.Danaloca" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>
        <item name="colorOnSurface">@color/onSurfaceColor</item>
        <item name="colorOnError">@color/onErrorColor</item>

        <!-- Typography -->
        <item name="android:textViewStyle">@style/Widget.Danaloca.TextView</item>
        <item name="textAppearanceButton">@style/TextAppearance.Danaloca.Button</item>

        <!-- Padding for all screens -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Custom text styles -->
    <style name="Widget.Danaloca.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/onSurfaceColor</item>
    </style>

    <style name="TextAppearance.Danaloca.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>